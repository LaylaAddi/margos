<script> 
// hiding /showing  on page load company driver cents per mile 
$(document).ready(function() {
    $('select[id="select-driver"]').ready(function() {
        var str = $('select[id="select-driver"] option:selected').text();
        if (str.indexOf("Company") >= 0) { 
            $('#hideCents').fadeIn( "fast" );
        } else {
            $('#hideCents').fadeOut( "fast" );   
        }
    });
});
</script>

<script>
