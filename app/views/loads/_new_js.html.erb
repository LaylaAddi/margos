<script>
$(document).ready(function() {
    $('select[id="select-driver"]').change(function() {
        var str = $('select[id="select-driver"] option:selected').text();
        if (str.indexOf("Company") >= 0) { 
            $('#hideCents').fadeIn( "slow" );
        } else {
            $('#hideCents').fadeOut( "slow" );  
        }
    });
});
</script>

